@model CoffeeShops.Model.CoffeeShop

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">

        <div class="col-lg-7 ">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb shadow-lg p-2" style="border-radius:10px">
                    <li class="breadcrumb-item "><a asp-action="Index">Coffee Shops</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>



            <div class="card mb-5 border shadow">
                <img src="@Model.ImageUrl" class="card-img-top">
                <div class="card-body">

                    <div class="d-flex flex-column text-center mb-3">
                        <h1 class=" mb-0 font-weight-bold">
                            @Html.DisplayFor(model => model.Name)
                        </h1>

                    </div>

                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div>
                                <h4 class="ms-2">
                                    <span class="badge bg-secondary">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                                            <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
                                        </svg>@Model.Address.StreetName, @Model.Address.StreetNumber
                                    </span>
                                </h4>
                            </div>
                            <div>
                                <h4 class="ms-2">
                                    <span class="badge bg-secondary">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-fill" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M4 4a4 4 0 1 1 4.5 3.969V13.5a.5.5 0 0 1-1 0V7.97A4 4 0 0 1 4 3.999zm2.493 8.574a.5.5 0 0 1-.411.575c-.712.118-1.28.295-1.655.493a1.319 1.319 0 0 0-.37.265.301.301 0 0 0-.057.09V14l.002.008a.147.147 0 0 0 .016.033.617.617 0 0 0 .145.15c.165.13.435.27.813.395.751.25 1.82.414 3.024.414s2.273-.163 3.024-.414c.378-.126.648-.265.813-.395a.619.619 0 0 0 .146-.15.148.148 0 0 0 .015-.033L12 14v-.004a.301.301 0 0 0-.057-.09 1.318 1.318 0 0 0-.37-.264c-.376-.198-.943-.375-1.655-.493a.5.5 0 1 1 .164-.986c.77.127 1.452.328 1.957.594C12.5 13 13 13.4 13 14c0 .426-.26.752-.544.977-.29.228-.68.413-1.116.558-.878.293-2.059.465-3.34.465-1.281 0-2.462-.172-3.34-.465-.436-.145-.826-.33-1.116-.558C3.26 14.752 3 14.426 3 14c0-.599.5-1 .961-1.243.505-.266 1.187-.467 1.957-.594a.5.5 0 0 1 .575.411z" />
                                        </svg>@Html.DisplayFor(model => model.City.Name)
                                    </span>
                                </h4>
                            </div>


                        </div>
                        <div class="flex-grow-1 text-end">
                            <div>
                                <h4 class="me-5"><span class="badge bg-success">Opens At: @Model.OpensAt.TimeOfDay</span></h4>
                            </div>
                            <div>
                                <h4 class="me-5"><span class="badge bg-danger">Closes At: @Model.ClosesAt.TimeOfDay</span></h4>
                            </div>
                        </div>

                    </div>

                </div>


            </div>

            <div class="card shadow-lg  bg-dark">
                <div class="card-header h3"><span class="badge bg-dark">Menu</span> </div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.MenuItems)
                    {
                        <li class="list-group-item lead">@item.ItemName <span class="badge bg-primary">@item.Price Kn</span></li>
                    }

                </ul>
            </div>
        </div>
    </div>
</div>

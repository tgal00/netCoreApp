@model List<CoffeeShop>

<div class="container mb-5">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-6 p-5">
                <div class="card bg-light mb-3 shadow">
                    <img src="@item.ImageUrl" class="card-img-top img-responsive">
                    <div class="card-body">
                        <p class="card-title display-4 text-center">@item.Name</p>
                        <p class="card-text  text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pin-map" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M3.1 11.2a.5.5 0 0 1 .4-.2H6a.5.5 0 0 1 0 1H3.75L1.5 15h13l-2.25-3H10a.5.5 0 0 1 0-1h2.5a.5.5 0 0 1 .4.2l3 4a.5.5 0 0 1-.4.8H.5a.5.5 0 0 1-.4-.8l3-4z" />
                                <path fill-rule="evenodd" d="M8 1a3 3 0 1 0 0 6 3 3 0 0 0 0-6zM4 4a4 4 0 1 1 4.5 3.969V13.5a.5.5 0 0 1-1 0V7.97A4 4 0 0 1 4 3.999z" />
                            </svg>@item.City.Name
                        </p>
                    </div>
                    <div class="card-footer text-center bg-dark">
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn-primary btn">More details</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>



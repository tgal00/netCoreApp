@model CoffeeShops.Model.CoffeeShop




<div class="card" style="box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;">

    <div class="card-header bg-dark text-white text-center">
        <h4>Add New Coffee Shop</h4>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label class="control-label">Coffee Shop Name</label>
            <input asp-for="Name" class="form-control mb-3" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>


        @{
           
            var pattern = System.Threading.Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower();
            pattern = pattern.Replace("DD", "D").Replace("D", "DD");
            pattern = pattern.Replace("MM", "M").Replace("M", "MM");
        }

        <div class="form-group"  data-format="@pattern">
            <label class="control-label">Opens At</label>
            <input asp-for="OpensAt" class="form-control mb-3" />
            <span asp-validation-for="OpensAt" class="text-danger"></span>
        </div>

        <div class="form-group"  data-format="@pattern">
            <label class="control-label">Closes At</label>
            <input asp-for="ClosesAt" class="form-control mb-3" />
            <span asp-validation-for="ClosesAt" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Coffee Shop Image Url</label>
            <input asp-for="ImageUrl" class="form-control mb-3" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Street Name</label>
            <input asp-for="Address.StreetName" class="form-control mb-3" />
            <span asp-validation-for="Address.StreetName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Street Number</label>
            <input asp-for="Address.StreetNumber" class="form-control mb-3" />
            <span asp-validation-for="Address.StreetNumber" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label class="control-label">City</label>
            <select asp-for="CityID" asp-items="ViewBag.PossibleCities" class="form-control"></select>
            <span asp-validation-for="CityID" class="text-danger"></span>
        </div>


        <div class="form-group mt-3">
            <input type="submit" value="Save" class="btn btn-outline-success" />
        </div>
    </div>
</div>




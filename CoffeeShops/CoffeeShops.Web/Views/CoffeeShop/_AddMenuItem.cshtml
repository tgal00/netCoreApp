@model CoffeeShops.Model.MenuItem

<div class="card" style="box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;">
    <div class="card-header text-center bg-dark text-white">
        <h4>Add New Menu Item</h4>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label class="control-label">Menu Item</label>
            <input asp-for="ItemName" class="form-control mb-3" />
            <span asp-validation-for="ItemName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Price</label>
            <input asp-for="Price" class="form-control mb-3" type="number" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit"  value="Save" class="btn btn-outline-success" />
        </div>
    </div>
</div>



